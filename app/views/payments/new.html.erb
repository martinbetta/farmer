<div class="container sign-in-up-box">
  <div class="wrapper-1-sign-in-up">
      <h2>Checkout summary</h2>
      <div class="order-overview" >
        <% @order.order_items.each do |item| %>
          <div class="overview-all d-flex justify-content-between">
            <div class="overview-product-unit"><%= item.product.name %></div>
            <div class=overview-item-quantity><%= item.quantity %></div>
            <div class=overview-product-unit><%= item.product.unit %></div>
            <div class=overview-product-price><%= item.product.unit_price %></div>
            <div class=overview-total-price><%= item.total_price.to_f%></div>
           </div>
        <% end %>

        <div class="overview-all d-flex">
          <% @order.order_items.each do |item| %>
          <p><%= item.product.name %>&emsp;&emsp;<%= item.quantity %>&emsp;<%= item.product.unit %>&emsp;<%= item.product.unit_price %>&emsp;<%= item.total_price.to_f%></p>
          <% end %>
        </div>

      </div>
      <button id="pay" class="btn btn-danger" style="border-radius: 5px;">Pay</button>
      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @order.checkout_session_id %>'
          });
        });
      </script>
  </div>
    <div class="wrapper-2-sign-in-up"></div>
</div>
