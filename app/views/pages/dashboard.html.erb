<div class="container">
  <ul class="nav nav-tabs justify-content-center" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Active orders</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Past orders</a>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" style="margin-top: 20px" id="home" role="tabpanel" aria-labelledby="home-tab">
      <div class="accordion" id="accordionExample">
        <% @orders.each do |order| %>
          <div class="card">
            <div class="card-header" id="headingOne">
                <button id="dash-btn" class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#collapse" aria-expanded="true" aria-controls="collapse">
                  <p><strong>Confirmation date:</strong><%= order.confirmation_date %></p>
                </button>
            </div>
            <% order.order_items.each do |i|  %>
              <div id="collapse" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                <div class="card-body">
                  <div class="item-quantity-box">
                    <p><%= i.quantity %> x <%= i.product.name %></p>
                  </div>
                  <div class="price-box">
                    <p><%= i.price %></p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab"></div>
  </div>
</div>











